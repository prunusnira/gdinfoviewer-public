<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_music_jacket"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/empty" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading data from" />

            <TextView
                android:id="@+id/tv_music_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GITADORA Info Server" />

            <TextView
                android:id="@+id/tv_music_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please wait for several seconds" />

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>